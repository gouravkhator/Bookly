<div class="form-row">
    <div class="form-item">
        <label class="form-item-required">Title</label>
        <input type="text" name="title" value="<%= book.title %>" />
    </div>
    <div class="form-item">
        <label class="form-item-required">Author</label>
        <select name="author">
            <% authors.forEach(author=> { %>
            <% if(author.id === book.author) { %>
            <option selected value="<%= author.id %>"><%= author.name %></option>
            <% } else { %>
            <option value="<%= author.id %>"><%= author.name %></option>
            <% }}) %>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label class="form-item-required">Publish Date</label>
        <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] 
    //2019-12-20T12:25:09 DateTTime so T is separator. get date only.
    //As the date came from database(model book) so we had to do lots of conversion but if it comes from server and not model then no conversion
    %>" />
    </div>
    <div class="form-item">
        <label class="form-item-required">Page Count</label>
        <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>" />
    </div>
</div>
<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label class="form-item-required">Cover</label>
        <input type="file" name="cover" class="book-cover filepond" />
    </div>
    <div class="form-item">
        <label>Description</label>
        <textarea name="description"><%= book.description %></textarea>
    </div>
</div>